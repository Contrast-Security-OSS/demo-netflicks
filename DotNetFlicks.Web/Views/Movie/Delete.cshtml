@model DotNetFlicks.ViewModels.Movie.MovieViewModel

@{
    ViewData["Title"] = "Delete " + Model.Name;
}

<h1>@ViewData["Title"]</h1>
<p class="lead">Are you sure you want to delete @Model.Name?</p>
<br /><br />

<form asp-controller="Movie" asp-action="Delete" method="post" class="form-horizontal" role="form">
    <div class="container form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <br /><br />
        <a asp-action="Index">Back to List</a>
    </div>
</form>