@using DotNetFlicks.Accessors.Identity

@inject ApplicationSignInManager SignInManager
@inject ApplicationUserManager UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a asp-controller="Manage" asp-action="Index" class="nav-link" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn nav-link border-0">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li>
            <a asp-controller="Account" asp-action="Login" class="nav-link">Log in</a>
        </li>
        <li>
            <a asp-controller="Account" asp-action="Register" class="nav-link">Register</a>
        </li>
    </ul>
}