@model DotNetFlicks.ViewModels.Genre.GenreViewModel

@{
    ViewData["Title"] = "Delete " + Model.Name;
}

<h1>@ViewData["Title"]</h1>
<p class="lead">Are you sure you want to delete @Model.Name?</p>
<br /><br />

<form asp-controller="Genre" asp-action="Delete" method="post" class="form-horizontal" role="form">
    <div class="container form-actions no-color">
        @if (Model.Movies.Count > 0)
        {
            <h4 class="text-danger">@Model.Name cannot be deleted because @Model.Movies.Count movies use it: </h4>
            <p>@Html.Raw(Model.MoviesBulletedList)</p>
        }
        else
        {
            <input type="submit" value="Delete" class="btn btn-danger" />
        }
        <br /><br />
        <a asp-action="Index">Back to List</a>
    </div>
</form>